  <body>
    <header>
      <a href="/"><img class="logo" src="/images/makersbnblogo.png" alt="MakersBNB logo" height="100px"></a>
      <nav>
        <ul>
          <li><a href="/listings">Listings</a></li>
          <li>|</li>
          <li><a href="/requests">Requests</a></li>
          <li>|</li>
          <li><a href="/logout">Log Out</a></li>
        </ul>
      </nav>
    </header>

    <main>
      <h1> List a new space </h1>
      <form id="list-new" action='/listings/new' method='post'>
        <label for='list-title'>Title: </label>
        <input type='text' id ='list-title' name='list_title' required>
        <label for='list-desc'>Description: </label>
        <input type='text' id ='list-desc' name='list_desc' required>
        <label for='list-price'>Price per night (Â£): </label> 
        <input type="number" min="0.00" step="1" value="10.00" id ='list-price' name='list_price' required>
        <label for='list-from'>Available from: </label>
        <input type='date' id ='list-from' name='list_from' required>
        <label for='list-to'>Available to: </label>
        <input type='date' id ='list-to' name='list_to' required>
        <input id="list-new-submit" class="btn" type='submit' value='Submit'>
      </form>
    </main>
  </body>
